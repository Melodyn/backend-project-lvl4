extends layout

block content
    form(method='post' action='/session')
        .form-group
            label(for='data_email')= t('user.field.email')
            input#data_email.form-control(
                class={
                  'is-invalid': errors.email
                }
                name='data[email]'
                type='email'
                value=values.email
                required
            )
            .invalid-feedback #{errors.email}
        .form-group
            label(for='data_password')= t('user.field.password')
            input#data_password.form-control(
                class={
                  'is-invalid': errors.password
                }
                name='data[password]'
                type='password'
                required
            )
            .invalid-feedback #{errors.password}
        input.btn.btn-primary(type='submit' value= t('app.button.signin'))
