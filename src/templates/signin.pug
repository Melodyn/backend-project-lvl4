extends layout

block content
    form(method='post' action='/session')
        .form-group
            label(for='email')= t('users.fields.email')
            input#email.form-control(name='email' type='email' required)
        .form-group
            label(for='password')= t('users.fields.password')
            input#password.form-control(name='password' type='password' required)
        button.btn.btn-primary= t('nav.signin')
