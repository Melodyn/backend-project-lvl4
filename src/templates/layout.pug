doctype html

html(lang='ru')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description' content= t('app.description'))
        meta(name='author' content='Mark Otto, Jacob Thornton, and Bootstrap contributors')
        meta(name='generator' content='Jekyll v4.1.1')
        title= t('app.name')
        link(rel='apple-touch-icon' sizes='180x180' href='/favicon/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='/favicon/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='/favicon/favicon-16x16.png')
        link(rel='manifest' href='/favicon/site.webmanifest')
        link(rel='canonical' href='https://getbootstrap.com/docs/4.5/examples/cover/')
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z", crossorigin="anonymous")
        link(rel='stylesheet' media='all' href='/cover.css')

    .cover-container.d-flex.w-100.h-100.p-3.mx-auto.flex-column
        header.masthead.mb-auto
            .inner
                a(href='/')
                    h3.masthead-brand= t('app.shortName')
                nav.nav.nav-masthead.justify-content-center
                    a.nav-link(class={ active: path === 'users' } href='/users')= t('nav.users')
                    if user.isAuthenticated
                        a.nav-link(class={ active: path === 'tasks' } href='/tasks')= t('nav.tasks')
                        a.nav-link(class={ active: path === 'statuses' } href='/statuses')= t('nav.statuses')
                        a.nav-link(class={ active: path === 'labels' } href='/labels')= t('nav.labels')
                        form(action='/session' method='post')
                            input(type='hidden' name='_method' value='delete')
                            input.btn.btn-outline-light.ml-4(type='submit' value= t('nav.signout'))
                    else
                        a.nav-link(class={active: path === 'signup'} href='/users/new')= t('nav.signup')
                        a.nav-link(class={active: path === 'signin'} href='/session/new')= t('nav.signin')

        each message in flash || []
            .alert(class=`alert-${message.type}`)= message.text

        block content
        footer.mastfoot.mt-auto
